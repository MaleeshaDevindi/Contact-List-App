<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/purple">

    <TextView
        android:id="@+id/addNoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:layout_marginStart="21dp"
        android:fontFamily="@font/roboto_bold"
        android:text="School"
        android:textColor="@color/white"
        android:textSize="28sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginStart="21dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/p_border"
        android:backgroundTint="@color/light_purple"
        android:maxLines="1"
        android:padding="12dp"
        android:src="@drawable/baseline_add_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        class="" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Name :"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/s_border"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter the name"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/schoolText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/roboto_medium"
        android:text="School :"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/schoolEditText"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginStart="40dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/s_border"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter the school"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gradeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Grade :"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/gradeEditText"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginStart="40dp"
        android:layout_marginTop="259dp"
        android:background="@drawable/s_border"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter the grade"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="370dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Number :"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/numberEditText"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginStart="40dp"
        android:layout_marginTop="327dp"
        android:background="@drawable/s_border"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter the number"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="440dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Email :"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginStart="40dp"
        android:layout_marginTop="397dp"
        android:background="@drawable/s_border"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter the email"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/addresslText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="510dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Address :"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginStart="40dp"
        android:layout_marginTop="467dp"
        android:background="@drawable/s_border"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter the address"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/noteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="580dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Note :"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/noteEditText"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginStart="40dp"
        android:layout_marginTop="537dp"
        android:background="@drawable/s_border"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter the note"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/ash"
        android:textColorHint="@color/ash"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cameraicon"
        android:layout_marginTop="50dp"
        android:layout_marginStart="172dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_done_24"
        app:elevation="6dp"
        app:tint="@color/purple" />




</RelativeLayout>